{
  "name": "@astrsk/design-system",
  "version": "0.0.2",
  "description": "astrsk Design System - Component library with Storybook",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": "./dist/index.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "tsup src/index.ts --dts --format esm && tailwindcss -i src/index.css -o dist/index.css --minify",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "design-system",
    "component-library",
    "react",
    "storybook",
    "astrsk"
  ],
  "author": "astrsk team",
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "peerDependencies": {
    "react": "^18.3.0 || ^19.0.0",
    "react-dom": "^18.3.0 || ^19.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@storybook/addon-a11y": "^9.1.12",
    "@storybook/addon-docs": "^9.1.12",
    "@storybook/addon-vitest": "^9.1.12",
    "@storybook/react-vite": "^9.1.12",
    "@tailwindcss/cli": "^4.1.14",
    "@tailwindcss/vite": "^4.1.14",
    "@types/node": "^24.8.1",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vueless/storybook-dark-mode": "^9.0.9",
    "lucide-react": "^0.503.0",
    "playwright": "^1.56.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^9.1.12",
    "tailwindcss": "^4.1.14",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3",
    "vite": "^6.3.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  }
}
