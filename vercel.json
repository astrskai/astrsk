{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "git": {
    "deploymentEnabled": {
      "gh-pages": false
    }
  },
  "ignoreCommand": "[ \"$VERCEL_GIT_COMMIT_REF\" = \"gh-pages\" ]",
  "installCommand": "pnpm --filter pwa... install --frozen-lockfile",
  "buildCommand": "cd apps/pwa && pnpm run build",
  "outputDirectory": "apps/pwa/dist",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
